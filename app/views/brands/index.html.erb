


<div class="row">
  <div class="col-sm-6">
    <h1>Brands</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_brand_path, class: 'btn btn-primary' do %>
    Add New Brand
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table id = "example" class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
        <th>Name</th>
    

            <th>Description</th>
            <th>Productcategory</th>
            <th>Supplier</th>
            
      </tr>
    </thead>

    <tbody>
      <% @brands.each do |brand| %>
        <%= content_tag :tr, id: dom_id(brand), class: dom_class(brand) do %>
          
            <td><%= link_to brand.name, brand %></td>
          

                      <td><%= brand.description %></td>
                      <td><%= brand.productcategory %></td>
                      <td><%= brand.supplier %></td>
          
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
