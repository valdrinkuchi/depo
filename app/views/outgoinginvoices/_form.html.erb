<%= form_with(model: outgoinginvoice, local: true) do |form| %>
  <% if outgoinginvoice.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(outgoinginvoice.errors.count, "error") %> prohibited this outgoinginvoice from being saved:</h2>

      <ul>
      <% outgoinginvoice.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :number %>
    <%= form.text_field :number, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :date %>
    <%= form.date_select :date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :customer_id %>
    <%= form.collection_select :customer_id, Customer.all,:id,:name,{}, {class: "form-control"} %>
  </div>

  <div class="form-group">
    <% if outgoinginvoice.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', outgoinginvoice, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if outgoinginvoice.persisted? %>
      <%= link_to "Cancel", outgoinginvoice, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", outgoinginvoices_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
