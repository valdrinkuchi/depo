


<div class="row">
  <div class="col-sm-6">
    <h1>Documents</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_document_path, class: 'btn btn-primary' do %>
    Add New Document
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Description</th>
            <th>Incominginvoice</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @documents.each do |document| %>
        <%= content_tag :tr, id: dom_id(document), class: dom_class(document) do %>
          

                      <td><%= document.description %></td>
                      <td><%= document.incominginvoice %></td>
          
          
            <td><%= link_to 'Show', document %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
